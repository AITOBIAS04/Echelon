{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://echelon.ai/schemas/theatre/v1.0.0",
  "title": "Echelon Theatre Template Specification",
  "description": "JSON Schema for defining Echelon theatre templates - standardized scenario definitions for causal prediction markets with integrated RLMF training data export.",
  "version": "1.0.0",
  "type": "object",
  "required": [
    "schema_version",
    "theatre_id",
    "template_family",
    "display_name",
    "training_primitives",
    "difficulty_tiers",
    "fork_definitions",
    "scoring"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version of this schema format."
    },
    "theatre_id": {
      "type": "string",
      "pattern": "^[a-z_]+_v\\d+$",
      "description": "Unique identifier for this theatre template. Format: lowercase_with_underscores_v followed by version number."
    },
    "template_family": {
      "type": "string",
      "enum": [
        "2D-DISCRETE",
        "2D-CONTINUOUS",
        "3D-STATIC",
        "3D-INERT",
        "3D-DYNAMIC",
        "PHYSICS-SIM",
        "SOCIAL-ENGINEERING",
        "ECONOMIC-SIM",
        "HYBRID"
      ],
      "description": "Classification of the template's simulation complexity and domain."
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable name for this theatre."
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Brief description of the scenario and its training value."
    },
    "training_primitives": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "List of RL primitives this theatre trains. Standard values: spatial_reasoning, temporal_reasoning, causal_inference, risk_assessment, multi_agent_coordination, adversarial_robustness, exploration_exploitation, policy_generalization."
    },
    "difficulty_tiers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tier_id", "label", "difficulty_multiplier"],
        "properties": {
          "tier_id": {
            "type": "string",
            "enum": ["easy", "standard", "hard"]
          },
          "label": {
            "type": "string",
            "description": "Display label for this tier."
          },
          "difficulty_multiplier": {
            "type": "number",
            "minimum": 0.1,
            "maximum": 3.0,
            "description": "Multiplier applied to difficulty parameters."
          },
          "parameter_overrides": {
            "type": "object",
            "description": "Tier-specific parameter overrides."
          }
        }
      },
      "minItems": 1,
      "description": "Available difficulty configurations for this theatre."
    },
    "fork_definitions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "fork_id",
          "trigger_condition",
          "options",
          "deadline_ms",
          "state_transitions"
        ],
        "properties": {
          "fork_id": {
            "type": "string",
            "pattern": "^f_\\d{2}$"
          },
"trigger_condition": {
            "type": "object",
            "description": "Condition that triggers this fork.",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["timestep", "state_reached", "random", "entropy_threshold", "logic_gap_threshold"]
              },
              "parameters": {
                "type": "object",
                "description": "Type-specific parameters."
              }
            }
          },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["option_id", "label", "description", "success_criteria"],
              "properties": {
                "option_id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "success_criteria": {
                  "type": "object",
                  "description": "Conditions for this option to be marked successful."
                },
                "failure_modes": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "mode": { "type": "string" },
                      "condition": { "type": "string" },
                      "penalty": { "type": "number" }
                    }
                  }
                }
              }
            },
            "minItems": 2
          },
          "deadline_ms": {
            "type": "integer",
            "minimum": 1000,
            "description": "Maximum time to make a decision in milliseconds."
          },
          "state_transitions": {
            "type": "object",
            "description": "State changes resulting from each option.",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "state_changes": {
                  "type": "object"
                },
                "reward_modifiers": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "minItems": 1
    },
    "scoring": {
      "type": "object",
      "required": ["score_vector"],
      "properties": {
        "score_vector": {
          "type": "object",
          "description": "Weights for multi-dimensional scoring.",
          "properties": {
            "time_weight": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Weight for completion time efficiency."
            },
            "value_weight": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Weight for task value achieved."
            },
            "collateral_weight": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Weight for resource preservation."
            },
            "safety_weight": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Weight for safety constraint adherence."
            },
            "trace_weight": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Weight for decision quality and traceability."
            }
          },
          "required": ["time_weight", "value_weight", "collateral_weight", "safety_weight", "trace_weight"]
        },
        "score_bounds": {
          "type": "object",
          "description": "Min/max possible scores for normalization.",
          "properties": {
            "minimum": { "type": "number" },
            "maximum": { "type": "number" }
          }
        },
        "tie_breakers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Ordered list of tie-breaker criteria."
        }
      }
    },
    "agent_behavior_config": {
      "type": "object",
      "description": "Configuration for agent archetype behavior in this theatre.",
      "properties": {
        "enabled_archetypes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["SHARK", "SPY", "DIPLOMAT", "SABOTEUR", "WHALE", "DEGEN"]
          }
        },
        "population_limits": {
          "type": "object",
          "properties": {
            "min_total": { "type": "integer", "minimum": 1 },
            "max_total": { "type": "integer" },
            "min_per_archetype": { "type": "integer", "minimum": 0 },
            "max_per_archetype": { "type": "integer" }
          }
        },
        "spawn_weights": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        }
      }
    },
    "rlmf_export_config": {
      "type": "object",
      "description": "Configuration for RLMF data export from this theatre.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to export data from this theatre."
        },
        "sampling_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Fraction of episodes to sample for export."
        },
        "feature_flags": {
          "type": "object",
          "description": "Which features to include in exports."
        },
        "privacy_filters": {
          "type": "object",
          "description": "Privacy-preserving transformations to apply."
        }
      }
    },
    "oracle_config": {
      "type": "object",
      "description": "Oracle requirements for this theatre.",
      "properties": {
        "minimum_mode": {
          "type": "integer",
          "minimum": 0,
          "maximum": 2,
          "description": "Minimum oracle mode required for this theatre."
        },
        "required_feeds": {
          "type": "array",
          "items": { "type": "string" }
        },
        "confidence_threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum confidence threshold for settlement."
        }
      }
    },
    "physics_config": {
      "type": "object",
      "description": "Physics simulation parameters for 3D theatres.",
      "properties": {
        "engine": {
          "type": "string",
          "enum": ["builtin", "bullet", "pybullet", "mujoco", " Isaac"]
        },
        "timestep_ms": {
          "type": "number",
          "description": "Simulation timestep in milliseconds."
        },
        "gravity": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3
        },
        "friction_coefficients": {
          "type": "object"
        },
        "restitution_coefficients": {
          "type": "object"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "created_date": { "type": "string", "format": "date" },
        "last_modified": { "type": "string", "format": "date" },
        "status": {
          "type": "string",
          "enum": ["draft", "review", "approved", "deprecated"]
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
