{
  "name": "echelon-contracts",
  "version": "1.0.0",
  "description": "Echelon Protocol - Timeline Shards and Deflationary Mechanics Smart Contracts",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.js --network hardhat",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:base": "hardhat run scripts/deploy.js --network base",
    "deploy:testnet": "hardhat run scripts/deploy.js --network baseSepolia",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "polygon",
    "base",
    "prediction-markets",
    "counterfactual",
    "timeline-shards",
    "echelon"
  ],
  "author": "Echelon Protocol",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "hardhat": "^2.19.0",
    "dotenv": "^16.3.1",
    "solhint": "^4.0.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@chainlink/contracts": "^0.8.0"
  }
}
