# =============================================================================
# ECHELON PROTOCOL - ENVIRONMENT CONFIGURATION
# =============================================================================
# Domain: playechelon.io
# Copy this file to .env and fill in your values
# Generate secrets with: python -c 'import secrets; print(secrets.token_urlsafe(32))'

# =============================================================================
# FRONTEND (copy to frontend/.env.local)
# =============================================================================
NEXT_PUBLIC_ONCHAINKIT_API_KEY=CHANGE_ME
NEXT_PUBLIC_API_URL=http://localhost:8000
# Production: NEXT_PUBLIC_API_URL=https://api.playechelon.io

# =============================================================================
# COINBASE / PAYMENTS (Testnet Configured)
# =============================================================================
COINBASE_COMMERCE_API_KEY=CHANGE_ME
COINBASE_WEBHOOK_SECRET=CHANGE_ME
SETTLEMENT_WALLET_ADDRESS=0xA4885D48e09D62a47Fc5c9Add7eAd130DCBd5688

# =============================================================================
# REQUIRED - APPLICATION SECURITY
# =============================================================================

# JWT Secret Key (REQUIRED - generate a new one!)
JWT_SECRET_KEY=CHANGE_ME_generate_with_python_secrets

# Environment (development/staging/production)
ENVIRONMENT=development

# =============================================================================
# REQUIRED - WALLET & IDENTITY
# =============================================================================

# HD Wallet seed phrase for deterministic agent wallet generation (12-24 words)
# Generate with: python -c 'from eth_account import Account; Account.enable_unaudited_hdwallet_features(); print(Account.create_with_mnemonic()[1])'
MASTER_WALLET_SEED=

# Virtuals Protocol Entity ID (from registration at virtuals.io)
ENTITY_ID=0

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Your private key for contract deployment (DO NOT COMMIT!)
PRIVATE_KEY=your_private_key_here

# Treasury address for protocol fees
TREASURY_ADDRESS=0xYourTreasuryAddress

# Metadata URI for shard NFTs
METADATA_URI=https://api.echelon.market/metadata/

# =============================================================================
# NETWORK RPC URLs
# =============================================================================

# Testnets
BASE_SEPOLIA_RPC=https://sepolia.base.org
POLYGON_MUMBAI_RPC=https://rpc-mumbai.maticvigil.com
SOLANA_DEVNET_RPC=https://api.devnet.solana.com

# Mainnets (for production)
BASE_RPC=https://mainnet.base.org
POLYGON_RPC=https://polygon-rpc.com
SOLANA_RPC=https://api.mainnet-beta.solana.com

# =============================================================================
# CHAINLINK VRF
# =============================================================================

# Get subscription at: https://vrf.chain.link
VRF_SUB_ID=your_subscription_id

# =============================================================================
# DEPLOYED CONTRACTS (fill after deployment)
# =============================================================================

TIMELINE_SHARD_ADDRESS=
SABOTAGE_POOL_ADDRESS=
HOT_POTATO_ADDRESS=
VRF_CONSUMER_ADDRESS=

# =============================================================================
# PLATFORM API KEYS
# =============================================================================

# Polymarket (get from builder programme)
POLYMARKET_API_KEY=pending
POLYMARKET_API_SECRET=pending

# Kalshi (get from demo.kalshi.co for testing)
KALSHI_EMAIL=your_email
KALSHI_PASSWORD=your_password
KALSHI_USE_TESTNET=true

# Builder attribution code
ECHELON_BUILDER_CODE=ECHELON_DEV

# =============================================================================
# AI PROVIDERS (at least one required for agent brains)
# =============================================================================

# Tier 1: Premium (highest quality, most expensive)
ANTHROPIC_API_KEY=

# Tier 2: Standard (reliable, good balance)
OPENAI_API_KEY=

# Tier 3: Budget (good for most tasks, cheaper)
MISTRAL_API_KEY=

# Tier 4: Free (rate limited but $0)
GROQ_API_KEY=

# Local (requires Ollama running)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# OSINT DATA PROVIDERS
# =============================================================================

# Polygon.io (market data)
POLYGON_IO_API_KEY=

# RavenPack (news sentiment)
RAVENPACK_API_KEY=

# X/Twitter API
X_API_BEARER_TOKEN=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Mode
USE_TESTNET=true
DRY_RUN=true

# Logging
LOG_LEVEL=INFO

# Agent settings
X402_DAILY_LIMIT=100
AGENT_MAX_POSITION_SIZE=1000

# =============================================================================
# BUTLER WEBHOOKS (for X integration via Virtuals)
# =============================================================================
BUTLER_WEBHOOK_SECRET=CHANGE_ME
# Production: Generate with: openssl rand -hex 32

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
SCHEDULER_MAX_DAILY_BUDGET_USD=10.0
SCHEDULER_DEFAULT_INTERVAL_SECONDS=60
