# =============================================================================
# ECHELON PROTOCOL - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Your private key (DO NOT COMMIT!)
PRIVATE_KEY=your_private_key_here

# Treasury address for protocol fees
TREASURY_ADDRESS=0xYourTreasuryAddress

# Metadata URI for shard NFTs
METADATA_URI=https://api.echelon.market/metadata/

# =============================================================================
# NETWORK RPC URLs
# =============================================================================

# Testnets
BASE_SEPOLIA_RPC=https://sepolia.base.org
POLYGON_MUMBAI_RPC=https://rpc-mumbai.maticvigil.com
SOLANA_DEVNET_RPC=https://api.devnet.solana.com

# Mainnets (for production)
BASE_RPC=https://mainnet.base.org
POLYGON_RPC=https://polygon-rpc.com
SOLANA_RPC=https://api.mainnet-beta.solana.com

# =============================================================================
# CHAINLINK VRF
# =============================================================================

# Get subscription at: https://vrf.chain.link
VRF_SUB_ID=your_subscription_id

# =============================================================================
# DEPLOYED CONTRACTS (fill after deployment)
# =============================================================================

TIMELINE_SHARD_ADDRESS=
SABOTAGE_POOL_ADDRESS=
HOT_POTATO_ADDRESS=
VRF_CONSUMER_ADDRESS=

# =============================================================================
# PLATFORM API KEYS
# =============================================================================

# Polymarket (get from builder programme)
POLYMARKET_API_KEY=pending
POLYMARKET_API_SECRET=pending

# Kalshi (get from demo.kalshi.co for testing)
KALSHI_EMAIL=your_email
KALSHI_PASSWORD=your_password
KALSHI_USE_TESTNET=true

# Builder attribution code
ECHELON_BUILDER_CODE=ECHELON_DEV

# =============================================================================
# AI PROVIDERS (for agent brains)
# =============================================================================

OPENAI_API_KEY=your_openai_key
GROQ_API_KEY=your_groq_key

# =============================================================================
# OSINT DATA PROVIDERS
# =============================================================================

# Polygon.io (market data)
POLYGON_IO_API_KEY=

# RavenPack (news sentiment)
RAVENPACK_API_KEY=

# X/Twitter API
X_API_BEARER_TOKEN=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Mode
USE_TESTNET=true
DRY_RUN=true

# Logging
LOG_LEVEL=INFO

# Agent settings
X402_DAILY_LIMIT=100
AGENT_MAX_POSITION_SIZE=1000
